{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "/bin/sh -c 'uvicorn src.main:app --host 0.0.0.0 --port ${PORT:-8080}'",
    "healthcheckPath": "/api/v1/stats",
    "restartPolicyType": "ON_FAILURE"
  }
}
